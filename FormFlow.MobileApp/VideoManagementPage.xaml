<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FormFlow.MobileApp.VideoManagementPage"
    Title="Meine Videos">

    <Grid RowDefinitions="Auto,*">

        <Label
            Text="Gespeicherte Videos"
            FontSize="20"
            Padding="10"
            HorizontalOptions="Center" />

        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding MyVideos}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="10,5"
                        Padding="10"
                        StrokeShape="RoundRectangle 6">

                        <Grid ColumnDefinitions="*,Auto">

                            <VerticalStackLayout>
                                <Label
                                    Text="{Binding FileName}"
                                    FontAttributes="Bold" />

                                <Label
                                    Text="{Binding Id, StringFormat='ID: {0}'}"
                                    FontSize="10"
                                    TextColor="Gray" />
                            </VerticalStackLayout>

                            <HorizontalStackLayout
                                Grid.Column="1"
                                Spacing="6">

                                <Button
                                    Text="Renameâœï¸"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnRenameClicked" />

                                <Button
                                    Text="Re-analyzeðŸ”"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnReAnalyzeClicked" />

                                <Button
                                    Text="ðŸ—‘ï¸"
                                    BackgroundColor="Salmon"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnDeleteClicked" />
                            </HorizontalStackLayout>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
