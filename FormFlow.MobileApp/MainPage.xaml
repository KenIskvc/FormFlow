<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormFlow.MobileApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="form_flow_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Welcome to FormFlow!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Your personal AI coach to improve your volleyball skills."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Your personal AI coach to improve your volleyball skills." />

            <Button
                x:Name="UploadVideoNavBtn"
                Text="Upload Video Navigation Button"
                Clicked="NavigateToUpload"
                HorizontalOptions="Fill" />

            <Frame Padding="12" CornerRadius="12" BorderColor="LightGray">
                <VerticalStackLayout Spacing="8">

                    <Label Text="Token info (debug)"
               FontAttributes="Bold" />

                    <Editor x:Name="TokenInfoEditor"
                IsReadOnly="True"
                AutoSize="TextChanges"
                HeightRequest="140"
                Placeholder="No token info loaded." />

                    <Button Text="Refresh token info"
                Clicked="OnRefreshTokenInfoClicked" />
                </VerticalStackLayout>
            </Frame>
            <Frame Padding="12" CornerRadius="12" BorderColor="LightGray">
                <VerticalStackLayout Spacing="8">

                    <Label Text="Auth test (debug)"
               FontAttributes="Bold" />

                    <Button Text="Test /auth/me"
                Clicked="OnTestAuthMeClicked" />

                    <Label x:Name="AuthTestResultLabel"
               Text="No result yet."
               LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
