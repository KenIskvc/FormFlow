<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormFlow.MobileApp.MainPage"
             Title="FormFlow Home">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Image Source="form_flow_logo.png"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />

            <Label Text="Welcome to FormFlow"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Your Assigned Clubs" FontSize="18" FontAttributes="Bold" />
            <CollectionView x:Name="ClubsListView" 
                            SelectionMode="Single"
                            SelectionChanged="OnClubSelected"
                            HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5" Padding="15" StrokeShape="RoundRectangle 10">
                            <Label Text="{Binding Name}" FontSize="16" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
