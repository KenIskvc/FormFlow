<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FormFlow.MobileApp.AnalysisDetailPage"
    Title="Analysis">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label
                Text="Summary"
                FontSize="20"
                FontAttributes="Bold" />

            <Label Text="{Binding DetectedKeypointsText}" />

            <Label
                Text="Issues"
                FontSize="18"
                FontAttributes="Bold"
                IsVisible="{Binding HasErrors}" />

                        <CollectionView
                ItemsSource="{Binding Errors}"
                IsVisible="{Binding HasErrors}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="12"
                            CornerRadius="12"
                            BorderColor="Red">

                                        <Label
                                Text="{Binding Message}"
                                FontAttributes="Bold" />

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label
                Text="Suggestions"
                FontSize="18"
                FontAttributes="Bold"
                IsVisible="{Binding HasSuggestions}" />

            <CollectionView
                ItemsSource="{Binding Suggestions}"
                IsVisible="{Binding HasSuggestions}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                Padding="12"
                CornerRadius="12"
                BackgroundColor="#F6F6F6"
                BorderColor="#DDDDDD">

                            <HorizontalStackLayout Spacing="8">

                                <Label
                        Text="ðŸ’¡"
                        FontSize="18" />

                                <Label
                        Text="{Binding .}"
                        FontSize="14"
                        TextColor="#444444" />

                            </HorizontalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <Label
                Text="Angles"
                FontSize="18"
                FontAttributes="Bold" />

            <CollectionView ItemsSource="{Binding Angles}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" CornerRadius="12">
                            <VerticalStackLayout>
                                <Label
                                    Text="{Binding Name}"
                                    FontAttributes="Bold" />
                                <Label Text="{Binding Range}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
